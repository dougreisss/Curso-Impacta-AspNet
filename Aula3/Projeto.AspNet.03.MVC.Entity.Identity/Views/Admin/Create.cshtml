@*

*@

@model User

@{

    @* titulo da view *@
    ViewData["Title"] = "Criar registro";
}

<h2 class="bg-info text-white">@ViewData["Title"]</h2>

<a asp-action="Index" class="btn btn-secondary">Listar</a>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Nome</label>
        <input type="text" asp-for="Name" placeholder="Exemplo: José" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="email" asp-for="Email" placeholder="Exemplo: email@email.com" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Password">Senha</label>
        <input type="password" asp-for="Password" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
